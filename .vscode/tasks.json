{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang-10 build active file",
            "command": "/usr/bin/clang-10",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/model.cpp",
                "-o",
                "${workspaceFolder}/app",
                "-I/usr/include/SDL2",
                "-lSDL2", "-lSDL2main", "-lm", "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}